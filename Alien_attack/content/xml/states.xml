<?xml version="1.0" ?>
<states>
    <menu>
        <textures>
            <texture filename="interface/button.png" id="play_button" />
            <texture filename="interface/exit.png" id="exit_button" />
        </textures>

        <objects>
            <object type="Button" x="100" y="100" width="400" height="100"
                textureId="play_button" frameCount="0" callbackId="1" />
            <object type="Button" x="100" y="300" width="400" height="100"
                textureId="exit_button" frameCount="0" callbackId="2" />
        </objects>
    </menu>

    <play>
        <textures>
            <texture filename="bullet1.png" id="bullet1" />
            <texture filename="bullet2.png" id="bullet2" />
            <texture filename="bullet3.png" id="bullet3" />
            <texture filename="lives.png" id="lives" />
            <texture filename="largeexplosion.png" id="large_explosion" />
            <texture filename="bossexplosion.png" id="boss_explosion" />
            <texture filename="explosion.png" id="explosion" />
            <texture filename="smallexplosion.png" id="small_explosion" />
        </textures>
    </play>

    <pause>
        <textures>
            <texture filename="interface/resume.png" id="resume_button" />
            <texture filename="interface/main.png" id="menu_button" />
        </textures>

        <objects>
            <object type="Button" x="200" y="100" width="200" height="80"
                textureId="resume_button" frameCount="0" callbackId="1" />
            <object type="Button" x="200" y="300" width="200" height="80"
                textureId="menu_button" frameCount="0" callbackId="2" />
        </objects>
    </pause>

    <game_over>
        <textures>
            <texture filename="interface/gameover.png" id="game_over_label" />
            <texture filename="interface/restart.png" id="restart_button" />
            <texture filename="interface/main.png" id="menu_button" />
			<texture filename="clouds2" id="clouds2" />
        </textures>

        <objects>
            <object type="AnimatedGraphic" x="200" y="100" width="190" height="30"
                textureId="game_over_label" frameCount="2" animSpeed="2" />
            <object type="Button" x="200" y="200" width="200" height="80"
                textureId="restart_button" frameCount="0" callbackId="1" />
            <object type="Button" x="200" y="300" width="200" height="80"
                textureId="menu_button" frameCount="0" callbackId="2" />
        </objects>
    </game_over>

    <between_level>
        <textures>
            <texture filename="interface/next_button.png" id="next_button" />
        </textures>

        <objects>
            <object type="Button" x="500" y="350" width="100" height="100"
                textureId="next_button" frameCount="0" callbackId="1" />
        </objects>
    </between_level>

    <game_winning>
        <textures>
            <texture filename="interface/main.png" id="menu_button" />
        </textures>

        <objects>
            <object type="Button" x="350" y="350" width="200" height="80"
                textureId="menu_button" frameCount="0" callbackId="1" />
        </objects>
    </game_winning>
</states>
